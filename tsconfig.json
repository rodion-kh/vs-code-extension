{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "outDir": "out",
    "lib": ["es2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true /* enable all strict type-checking options */,
    "composite": true,
    "declarationMap": true
  }
}
